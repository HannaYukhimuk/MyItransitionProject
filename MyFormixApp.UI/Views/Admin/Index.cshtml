@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold text-primary">
            <i class="fas fa-tachometer-alt me-3"></i>@Localizer["AdminDashboardTitle"]
        </h1>
    </div>

    <div class="row g-4">
        

        <div class="col-12 mt-4">
            <div class="card shadow">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h5 class="mb-0"><i class="fas fa-sliders-h me-2"></i>@Localizer["AdminControls"]</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a asp-controller="TemplateThemes" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div>
                                <i class="fas fa-palette text-primary me-3"></i>
                                <span>@Localizer["ManageTemplateThemes"]</span>
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>
                                                
                        <a asp-controller="Admin" asp-action="ManageUsers" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div>
                                <i class="fas fa-user-shield text-success me-3"></i>
                                <span>@Localizer["AddNewAdmin"]</span>
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>

                        <a asp-controller="Templates" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div>
                                <i class="fas fa-file-alt text-info me-3"></i>
                                <span>@Localizer["ManageTemplates"]</span>
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>
                        
                        <a asp-controller="Forms" asp-action="Admin" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div>
                                <i class="fas fa-clipboard-check text-warning me-3"></i>
                                <span>@Localizer["ManageForms"]</span>
                            </div>
                            <i class="fas fa-chevron-right text-muted"></i>
                        </a>
                        
                        
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>