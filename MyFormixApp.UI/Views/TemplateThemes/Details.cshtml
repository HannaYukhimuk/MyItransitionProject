@model MyFormixApp.Domain.DTOs.Templates.TemplateThemeDto

@{
    ViewData["Title"] = "Theme Details";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white py-3">
            <h3 class="h5 mb-0">
                <i class="fas fa-info-circle me-2"></i>@Localizer["ThemeDetailsTitle"]
            </h3>
        </div>
        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="border p-3 rounded">
                        <h5 class="fw-bold mb-3">@Localizer["ThemeInformation"]</h5>
                        <dl class="row">
                            <dt class="col-sm-4">@Localizer["Id"]</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4">@Localizer["Name"]</dt>
                            <dd class="col-sm-8 fw-bold">@Model.Name</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>@Localizer["BackToList"]
                </a>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>@Localizer["Edit"]
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>@Localizer["Delete"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>