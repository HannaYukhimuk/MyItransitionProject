@model MyFormixApp.Domain.DTOs.Account.ForgotPasswordDto

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0 text-center">
                        <i class="fas fa-key me-2"></i>Forgot Password
                    </h2>
                </div>
                
                <div class="card-body p-4">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger mb-4">
                            <h5 class="alert-heading">Error</h5>
                            <div asp-validation-summary="All"></div>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" 
                                   placeholder="Enter your email">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-4">
                        <p class="text-muted">Remember your password? 
                            <a asp-action="Login" class="text-decoration-none fw-bold">Login here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}