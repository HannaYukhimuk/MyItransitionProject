@model MyFormixApp.Domain.DTOs.Account.ResetPasswordDto

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0 text-center">
                        <i class="fas fa-key me-2"></i>@Localizer["ResetPasswordTitle"]
                    </h2>
                </div>
                
                <div class="card-body p-4">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger mb-4">
                            <h5 class="alert-heading">@Localizer["PasswordResetError"]</h5>
                            <div asp-validation-summary="All"></div>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Token" />
                        
                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label fw-bold">
                                <i class="fas fa-lock me-2"></i>@Localizer["NewPassword"]
                            </label>
                            <input asp-for="NewPassword" type="password" class="form-control form-control-lg" 
                                   placeholder="@Localizer["NewPasswordPlaceholder"]">
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">
                                <i class="fas fa-lock me-2"></i>@Localizer["ConfirmPassword"]
                            </label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" 
                                   placeholder="@Localizer["ConfirmPasswordPlaceholder"]">
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>@Localizer["ResetPasswordButton"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
