@model MyFormixApp.Domain.DTOs.Templates.TemplateDetailsDto

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Template Info</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>Author:</strong></span>
                <span>
                    <a href="@Url.Action("Profile", "Account", new { id = Model.Author.Id })" 
                       class="text-decoration-none">
                        @Model.Author.Username
                    </a>
                </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>Theme:</strong></span>
                <span class="badge rounded-pill" 
                      style="background-color: @Model.Theme;">
                    @Model.Theme.Name
                </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>Created:</strong></span>
                <span>@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>Last Updated:</strong></span>
                <span>@Model.UpdatedAt.ToString("MMMM dd, yyyy")</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>Visibility:</strong></span>
                <span>
                    @if (Model.IsPublic)
                    {
                        <span class="badge bg-success">Public</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Private</span>
                    }
                </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>Forms created:</strong></span>
                <span>@Model.FormsCount</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>Likes:</strong></span>
                <span>@Model.LikesCount</span>
            </li>
            @if (Model.Tags.Any())
            {
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <span><strong>Tags:</strong></span>
                        <div>
                            @foreach (var tag in Model.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag</span>
                            }
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>



<style>
    .list-group-item {
        border-left: none;
        border-right: none;
        padding: 0.75rem 0;
    }
    
    .list-group-item:first-child {
        border-top: none;
    }
    
    .list-group-item:last-child {
        border-bottom: none;
    }
</style>