@model MyFormixApp.Domain.DTOs.Templates.TemplateDto
@{
    ViewData["Title"] = Localizer["EditTemplate"];
    ViewData["FormAction"] = "Edit";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="fas fa-edit me-2"></i> @ViewData["Title"]
            </h2>
        </div>
        <div class="card-body">
            <form asp-action="@ViewData["FormAction"]" id="templateForm" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <partial name="Partials/_TemplateForm" model="Model" />
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> @Localizer["SaveChanges"]
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> @Localizer["Cancel"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/templates/create-edit.js"></script>
}
