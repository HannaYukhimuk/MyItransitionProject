<header class="sticky-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <i class="fas fa-file-alt me-2"></i>
                Formix
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">
                                <i class="fas fa-home me-1"></i> @Localizer["Home"]
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-shield-alt me-1"></i> @Localizer["Admin"]
                            </a>
                        </li>
                    }

                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="contentDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-folder me-1"></i> @Localizer["MyContent"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="contentDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="TemplateViews" asp-action="My">@Localizer["Templates"]</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Forms" asp-action="My">@Localizer["Forms"]</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Templates" asp-action="Shared">@Localizer["SharedWithMe"]</a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center ms-3">
                    <a asp-controller="Language" asp-action="SetLanguage" asp-route-culture="en"
                       class="language-link nav-link px-2 @(System.Threading.Thread.CurrentThread.CurrentCulture.Name.StartsWith("en") ? "active" : "")">
                        EN
                    </a>
                    <span class="text-white-50 mx-1">|</span>
                    <a asp-controller="Language" asp-action="SetLanguage" asp-route-culture="ru"
                       class="language-link nav-link px-2 @(System.Threading.Thread.CurrentThread.CurrentCulture.Name.StartsWith("ru") ? "active" : "")">
                        RU
                    </a>
                </div>

                <partial name="_AuthPartial" />

                <button id="theme-toggle" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
        </div>
    </nav>
</header>
