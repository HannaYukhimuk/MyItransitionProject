@model MyFormixApp.Domain.DTOs.Forms.FormDetailsDto

<div class="btn-group btn-group-sm">
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary" title="View">
        <i class="fas fa-eye"></i>
    </a>
        
    @if (ViewBag.IsAdmin ?? false)
    {
        <form asp-action="AdminDelete" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger" 
                    data-confirm="Are you sure you want to delete this form?">
                <i class="fas fa-trash"></i>
            </button>
        </form>
    }
    else
    {
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger" 
                    data-confirm="Are you sure you want to delete your form?">
                <i class="fas fa-trash"></i>
            </button>
        </form>
    }
</div>